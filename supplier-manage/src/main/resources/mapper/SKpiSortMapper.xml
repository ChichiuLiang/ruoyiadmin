<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.supplier.mapper.SKpiSortMapper">

    <resultMap type="SKpiSort" id="SKpiSortResult">
        <result property="id" column="id"/>
        <result property="parentId" column="parent_id"/>
        <result property="sortName" column="sort_name"/>
        <result property="weight" column="weight"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="delFlag" column="del_flag"/>
        <result property="orderNum" column="order_num"/>
        <result property="parentName" column="parent_name"/>
        <result property="ancestors" column="ancestors"/>
    </resultMap>

    <sql id="selectSKpiSortVo">
        select id, parent_id, sort_name,order_num, weight, create_by, create_time, update_by, update_time, del_flag,ancestors from s_kpi_sort
    </sql>

    <select id="selectSKpiSortList" parameterType="SKpiSort" resultMap="SKpiSortResult">
        <include refid="selectSKpiSortVo"/>
        where del_flag = '0'
        <if test="parentId != null ">and parent_id = #{parentId}</if>
        <if test="sortName != null  and sortName != ''">and sort_name like concat(concat('%', #{sortName}), '%')</if>
        <if test="weight != null  and weight != ''">and weight = #{weight}</if>
        order by parent_id, order_num
    </select>

    <select id="selectSKpiSortById" parameterType="Long" resultMap="SKpiSortResult">
         select t.id, t.sort_name, t.parent_id, t.order_num, p.sort_name as parent_name,t.weight,t.ancestors
        from s_kpi_sort t
        left join s_kpi_sort p on p.id = t.parent_id
        where t.del_flag = '0' and t.id = #{id}
    </select>

    <select id="selectChildrenSortById" parameterType="Long" resultMap="SKpiSortResult">
		select * from s_kpi_sort where FIND_IN_SET (#{id},ancestors) <![CDATA[ <> ]]> 0
	</select>

    <select id="selectSortCount" parameterType="SKpiSort" resultType="int">
        select count(1) from s_kpi_sort
        where del_flag = '0'
        <if test="id != null and id != 0">and id = #{id}</if>
        <if test="parentId != null and parentId != 0">and parent_id = #{parentId}</if>
    </select>

    <select id="checkSortExistAssess" parameterType="Long" resultType="int">
		select count(1) from s_assess where sort_id = #{sortId} and del_flag = '0'
	</select>

    <insert id="insertSKpiSort" parameterType="SKpiSort">
        <selectKey keyProperty="id" resultType="long" order="BEFORE">
            SELECT seq_s_kpi_sort.NEXTVAL as id FROM DUAL
        </selectKey>
        insert into s_kpi_sort
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="parentId != null">parent_id,</if>
            <if test="sortName != null">sort_name,</if>
            <if test="weight != null">weight,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="orderNum != null">order_num,</if>
            <if test="ancestors != null">ancestors,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="parentId != null">#{parentId},</if>
            <if test="sortName != null">#{sortName},</if>
            <if test="weight != null">#{weight},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="orderNum != null">#{orderNum},</if>
            <if test="ancestors != null">#{ancestors},</if>
        </trim>
    </insert>

    <update id="updateSortChildren" parameterType="java.util.List">
        update s_kpi_sort set ancestors =
        <foreach collection="sorts" item="item" index="index"
                 separator=" " open="case id" close="end">
            when #{item.id} then #{item.ancestors}
        </foreach>
        where id in
        <foreach collection="sorts" item="item" index="index"
                 separator="," open="(" close=")">
            #{item.id}
        </foreach>
    </update>

    <update id="updateSKpiSort" parameterType="SKpiSort">
        update s_kpi_sort
        <trim prefix="SET" suffixOverrides=",">
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="sortName != null">sort_name = #{sortName},</if>
            <if test="weight != null">weight = #{weight},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="orderNum != null">order_num = #{orderNum},</if>
            <if test="ancestors != null">ancestors = #{ancestors},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSKpiSortById" parameterType="Long">
		update s_kpi_sort set del_flag = '1' where id = #{id}
	</delete>

    <delete id="deleteSKpiSortByIds" parameterType="String">
        delete from s_kpi_sort where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>